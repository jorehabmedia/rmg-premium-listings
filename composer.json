{
  "name": "rmgcs/wordpress-coding-standards",
  "description": "WordPress Coding Standards configuration for PHP",
  "type": "project",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.9.0",
    "wp-coding-standards/wpcs": "^3.1.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0"
  },
  "scripts": {
    "lint": "phpcs",
    "lint:fix": "phpcbf",
    "post-install-cmd": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility,vendor/phpcompatibility/phpcompatibility-wp"
    ],
    "post-update-cmd": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility,vendor/phpcompatibility/phpcompatibility-wp"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
